{
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint", "jsx-a11y", "import"],
  "rules": {
    // React rules - only keeping necessary 'off' overrides and stricter built-ins
    "react/react-in-jsx-scope": "off", // Necessary for Next.js
    "react/prop-types": "off", // Necessary for TypeScript
    "react/jsx-no-target-blank": "error", // Good rule, keep as error
    "react-hooks/rules-of-hooks": "error", // Good rule, keep as error
    // REMOVED: "react-hooks/exhaustive-deps" - Reverts to inherited "error"
    // REMOVED: "react/no-unescaped-entities" - Reverts to inherited "error"

    // TypeScript rules - elevating key type safety rules to "error"
    "@typescript-eslint/no-explicit-any": "error", // ENFORCED: Elevate from default "warn"
    "@typescript-eslint/no-non-null-assertion": "error", // ENFORCED: Elevate from default "warn"
    "@typescript-eslint/no-unused-vars": [
      // KEEP: Customizing the stricter error/warn
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/explicit-module-boundary-types": "off", // KEEP: Legacy override, but acceptable if preferred

    // General JavaScript rules
    "no-console": [
      "error",
      {
        "allow": ["warn", "error"]
      }
    ], // ENFORCED: Prevents debug logging leakage
    "no-unused-vars": "off", // Necessary to allow @typescript-eslint version to run
    "prefer-const": "warn", // Keep: Acceptable incremental fix rule
    "no-var": "error", // Good rule, keep as error

    // Import rules
    "import/order": [
      "warn", // Keep: Acceptable incremental formatting rule
      {
        "groups": ["builtin", "external", "internal", ["parent", "sibling"], "index"],
        "newlines-between": "never",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]

    // REMOVED: All jsx-a11y rules - Revert to inherited "error"
    // REMOVED: @next/next/no-img-element - Reverts to inherited "error"
    // The other Next.js specific rule:
    // "@next/next/no-html-link-for-pages" is covered by the inherited "next/core-web-vitals"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": ["node_modules/", ".next/", "out/", "public/", "*.config.js", "*.config.ts"]
}
